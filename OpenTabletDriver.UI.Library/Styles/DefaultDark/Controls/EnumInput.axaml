<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tc="using:OpenTabletDriver.UI.TemplatedControls">
    <Style Selector="tc|EnumInput">
        <Setter Property="Template">
            <ControlTemplate>
                <Border Name="PART_Background" CornerRadius="6" Padding="12">
                    <Grid ColumnDefinitions="Auto,*">
                        <TextBlock Text="{TemplateBinding Label}"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Margin="0, 0, 12, 0"/>
                        <ComboBox Name="PART_Input"
                                  SelectedItem="{TemplateBinding SelectedValue, Mode=TwoWay}"
                                  ItemsSource="{TemplateBinding Values}"
                                  Grid.Column="1"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Right" />
                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
