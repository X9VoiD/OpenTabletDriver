<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:OpenTabletDriver.UI.ViewModels"
        xmlns:c="using:OpenTabletDriver.UI.Controls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="OpenTabletDriver.UI.Views.MainWindowView"
        x:DataType="vm:MainWindowViewModel"
        x:CompileBindings="True"
        Icon="/Assets/otd.ico"
        Title="{Binding Title}"
        Background="Transparent"
        ExtendClientAreaChromeHints="PreferSystemChrome"
        ExtendClientAreaToDecorationsHint="True"
        Name="MainWindow">
    <Panel>

        <!-- Noisy stuff -->
        <!-- TODO: fine-grain control over the material opacity of the noise for different controls-->
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    TintColor="{DynamicResource OTD_BackgroundColor}"
                    TintOpacity="1"
                    MaterialOpacity="0"
                    FallbackColor="{DynamicResource OTD_BackgroundColor}"/>
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>

        <!-- Focus thingy, lose transparency when focus is lost -->
        <Rectangle Name="WindowBg"
                   IsHitTestVisible="False"
                   Fill="{DynamicResource OTD_BackgroundColorBrush}">
            <Rectangle.Transitions>
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="0:0:0.2"></DoubleTransition>
                </Transitions>
            </Rectangle.Transitions>
        </Rectangle>

        <!-- This panel margin ensures that all content is visible when the window is maximized on Windows. -->
        <Panel Margin="{Binding #MainWindow.OffScreenMargin}">
            <Grid RowDefinitions="Auto,*">

                <!-- Header -->
                <StackPanel Grid.Row="0"
                            Height="48"
                            IsHitTestVisible="False"
                            Orientation="Horizontal">
                    <PathIcon Name="BackButton"
                              Margin="20, 0"
                              Width="12"
                              Height="12"
                              Data="{StaticResource arrow_back}"/>
                    <TextBlock Text="{Binding Title}"
                               FontSize="12"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Content -->
                <SplitView Grid.Row="1"
                           IsPaneOpen="{Binding SidePaneOpen}"
                           DisplayMode="Inline"
                           OpenPaneLength="240"
                           PaneBackground="Transparent">
                    <SplitView.Pane>
                        <c:NavigationPaneView Margin="12, 20, 12, 12"/>
                    </SplitView.Pane>

                    <c:NavigationHost NavigationService="{StaticResource NavigationService}" Padding="36, 12"/>
                </SplitView>
            </Grid>
        </Panel>
    </Panel>
</Window>
